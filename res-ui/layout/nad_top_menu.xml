<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/alpha_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
        android:layout_marginBottom="4dp"
        android:background="@drawable/dot_preference_background_top"
        android:backgroundTint="?androidprv:attr/colorSurfaceHighlight"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="start|center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:padding="4dp"
            android:backgroundTint="@android:color/system_accent3_300"
            android:background="@drawable/dot_preference_background_full">

            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:maxWidth="48dp"
                app:maxHeight="48dp"
                android:paddingVertical="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_alpha" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:orientation="vertical"
            android:paddingStart="18dp">
            <TextView
                android:id="@+id/nad_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/alpha_settings_title"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="?android:attr/textColorPrimary"
                android:textDirection="locale" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/alpha_settings_summary"
                style="@style/PreferenceSummaryTextStyle"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
            android:layout_marginEnd="2dp"
            android:backgroundTint="@android:color/system_accent3_200"
            android:background="@drawable/dot_preference_background_bottom_left"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/wifi_icon"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:antialias="true"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_settings_wireless"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="4dp" />
                <TextView
                    android:id="@+id/wifi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/network_dashboard_title"
                    android:textColor="@android:color/white"
                    style="@style/PreferenceSummaryTextStyle"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_toRightOf="@id/wifi_icon" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/battery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
            android:backgroundTint="@android:color/system_accent3_300"
            android:background="@drawable/dot_preference_background_bottom_right"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:antialias="true"
                    android:scaleType="fitCenter"
                    android:rotation="90"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_settings_battery_white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp" />
                <TextView
                    android:id="@+id/battery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/power_usage_summary_title"
                    android:textColor="@android:color/white"
                    style="@style/PreferenceSummaryTextStyle"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:layout_toRightOf="@id/battery_icon" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
